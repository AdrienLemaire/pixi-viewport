{
  "name": "pixi-viewport",
  "version": "0.4.0",
  "description": "A scrollable, zoomable stage for PIXI.js with pinch-to-zoom and accelerated swiping",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "budo --dir docs docs/code.js:index.js --live",
    "build": "browserify docs/code.js -o docs/index.js",
    "docs": "markdown-api README.md index.js",
    "prepare": "npm run build && npm run docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidfig/pixi-viewport.git"
  },
  "keywords": [
    "PIXI",
    "pixi.js",
    "viewport",
    "zoom",
    "scroll",
    "pinch",
    "stage"
  ],
  "author": "David Figatner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidfig/pixi-viewport/issues"
  },
  "homepage": "https://github.com/davidfig/pixi-viewport#readme",
  "dependencies": {
    "pixi-ease": "^0.6.1",
    "yy-renderer": "^1.3.3",
    "yy-update": "^1.2.0"
  },
  "devDependencies": {
    "fork-me-github": "^1.0.3",
    "highlight.js": "^9.12.0",
    "pixi.js": "^4.5.6",
    "yy-random": "^1.6.0"
  }
}
